{{>layouts/header}}

<div class="container mt-4">
    <h3>{{diary.mood}} {{diary.title}}</h3>
    <div class="text-muted small">작성자: {{diary.memberName}}</div>
    <p class="text-muted">{{diary.date}}</p>
    <hr>
    <p>{{diary.content}}</p>

    <div class="mt-3">
        {{#diary.isOwner}}
            <a href="/diaries/{{diary.id}}/edit" class="btn btn-warning">✏️ 수정</a>
            <a href="/diaries/{{diary.id}}/delete" class="btn btn-danger">🗑 삭제</a>
        {{/diary.isOwner}}
        <a href="/diaries/list" class="btn btn-secondary">🔙 목록으로</a>
        <a href="/diaries/{{year}}/{{month}}" class="btn btn-outline-info">📅 캘린더 보기</a>
    </div>

</div>

{{>layouts/footer}}